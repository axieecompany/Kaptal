generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  name          String
  password      String
  emailVerified Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  tokens          VerificationToken[]
  categories      Category[]
  transactions    Transaction[]
  goals           MonthlyGoal[]
  categoryBudgets CategoryBudget[]
  incomeRules     IncomeRule[]
  savingsGoals    SavingsGoal[]
}

model VerificationToken {
  id        String    @id @default(uuid())
  token     String    @unique
  type      TokenType
  expiresAt DateTime
  used      Boolean   @default(false)
  createdAt DateTime  @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
}

enum TokenType {
  EMAIL_VERIFICATION
  LOGIN_VERIFICATION
}

model Category {
  id        String   @id @default(uuid())
  name      String
  icon      String   @default("ðŸ“¦")
  color     String   @default("#6366f1")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  parentId String?
  parent   Category?  @relation("SubCategories", fields: [parentId], references: [id], onDelete: SetNull)
  children Category[] @relation("SubCategories")

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  transactions Transaction[]
  budgets      CategoryBudget[]

  @@index([userId])
  @@index([parentId])
}

model Transaction {
  id          String          @id @default(uuid())
  description String
  amount      Decimal         @db.Decimal(12, 2)
  type        TransactionType @default(EXPENSE)
  date        DateTime        @default(now())
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  categoryId String?
  category   Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  ruleItemId String?
  ruleItem   RuleItem? @relation(fields: [ruleItemId], references: [id], onDelete: SetNull)

  incomeRuleId String?
  incomeRule   IncomeRule? @relation(fields: [incomeRuleId], references: [id], onDelete: SetNull)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([categoryId])
  @@index([ruleItemId])
  @@index([incomeRuleId])
  @@index([date])
}

model MonthlyGoal {
  id        String   @id @default(uuid())
  month     Int      // 1-12
  year      Int
  amount    Decimal  @db.Decimal(12, 2)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, month, year])
  @@index([userId])
}

model CategoryBudget {
  id         String   @id @default(uuid())
  month      Int      // 1-12
  year       Int
  amount     Decimal  @db.Decimal(12, 2)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  categoryId String
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, categoryId, month, year])
  @@index([userId])
  @@index([categoryId])
}

enum TransactionType {
  INCOME
  EXPENSE
}

model IncomeRule {
  id          String   @id @default(uuid())
  name        String
  percentage  Decimal  @db.Decimal(5, 2)
  color       String   @default("#6366f1")
  icon        String   @default("ðŸ’°")
  month       Int
  year        Int
  baseIncome  Decimal  @db.Decimal(12, 2) @default(5000)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  items       RuleItem[]
  transactions Transaction[]

  @@index([userId])
  @@index([userId, month, year])
}

model RuleItem {
  id          String   @id @default(uuid())
  name        String
  amount      Decimal  @db.Decimal(12, 2)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  ruleId      String
  rule        IncomeRule @relation(fields: [ruleId], references: [id], onDelete: Cascade)

  transactions Transaction[]

  @@index([ruleId])
}

model SavingsGoal {
  id            String   @id @default(uuid())
  name          String
  targetAmount  Decimal  @db.Decimal(12, 2)
  currentAmount Decimal  @db.Decimal(12, 2) @default(0)
  deadline      DateTime
  icon          String   @default("ðŸŽ¯")
  color         String   @default("#6366f1")
  isCompleted   Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  deposits      SavingsDeposit[]

  @@index([userId])
}

model SavingsDeposit {
  id        String   @id @default(uuid())
  amount    Decimal  @db.Decimal(12, 2)
  note      String?
  date      DateTime @default(now())
  createdAt DateTime @default(now())

  goalId    String
  goal      SavingsGoal @relation(fields: [goalId], references: [id], onDelete: Cascade)

  @@index([goalId])
}
